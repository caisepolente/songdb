<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<%= button_to(name = "Order by name", options = {} , html_options = {method: "get", params:{order_by: "name"}}) %>
<%= button_to(name = "Order by creation date", options = {} , html_options = {method: "get", params:{order_by: "created_at"}}) %>

<!-- <%= link_to "Sort by name", order_by: "name" %> -->
<!-- <%= button_to "Order by creation date", action: "order_by_created_at" %> -->

<% @artists.each do |artist| %>
  <div class="novel-item">
    <div class="inline cover">
      <img class="small-cover" src="<%= artist.image.url %>"/>
    </div>
    <div class="inline details">
      <h3><%= link_to artist.name, artist %></h3>
    </div>
  </div>
<% end %>
